<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/main.css">
  </head>
<body>
    <%- include("partials/header.ejs") %>
    <h1>index </h1>
    <form action="/writing" method="GET">
      <input type="submit" value="Write Your Blog">
    </form>
    <% if (locals.blogText) { %>
      <h3>Your Texts: </h3>
      <form id="deleteForm" action="/action1" method="POST">
        <ol>
          <% blogTexts.forEach((text, index) => { %>
            <li>
              <%= text %>
              <input type="checkbox" name="deleteTexts" value="<%= index %>"> 
              <button type="submit" name="action" value="edit" formaction="/action1?editIndex=<%= index %>">Edit</button>
            </li>
          <% }); %>
        </ol>
        <button type="submit" name="action" value="delete">Delete Selected</button>
      </form>
  <% } else { %>
      <h3>You don't have any texts currently. If you want to write some, click Writing.</h3>
  <% } %>
    
  <%- include("partials/footer.ejs") %>
    
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
