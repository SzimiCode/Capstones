<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include("partials/header.ejs") %>
    <h1>index </h1>
    <a href="/writing">Writing</a>
    <form action="/writing" method="GET">
      <input type="submit" value="Write Your Blog">
    </form>
    <% if (locals.blogText) { %>
        <h3>Your Texts: </h3>
        <ol>
        <% for(let i=0; i<blogTexts.length;i++){ %>
            <li> <%= blogTexts[i] %> </li> 
            <input type="checkbox" id=`deleteText${i}`  value="Delete"> 
            <form action="/editing" method="PUT"></form>
            <input type="submit" value="Edit">
            </form>
            <% } %>
        </ol>
        <form action="/" method="DELETE">
          <% for(let i=0; i<blogTexts.length;i++){ %>
            <% var isChecked = document.getElementById(`deleteText${i}`).checked; %>
            <% if (isChecked) {
              <% delete blogTexts[i] %>
              <% } %>
            <% } %>
          <input type="submit" value="Delete">
        </form>
        
        <% } else { %>
        <h3>You don't have any texts currently. If you want to write some, click Writing.</h3>
        <% } %>
    
  <%- include("partials/footer.ejs") %>
    

</body>
</html>
